# ==================================
# PNPtv Bot Production Configuration Template
# Domain: pnptv.app
# ==================================
# INSTRUCTIONS:
# 1. Copy this file: cp .env.production.example .env.production
# 2. Update the values with your actual credentials
# 3. Copy to .env on VPS: cp .env.production .env
# 4. Never commit .env or .env.production with real credentials!
# ==================================

# Environment
NODE_ENV=production

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_TOKEN=your_telegram_bot_token_here
CHANNEL_ID=your_channel_id_here

# Admin Configuration
ADMIN_IDS=your_telegram_user_id_here

# ==================================
# Firebase Configuration
# ==================================
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket

# Firebase Private Key (keep the quotes and \n characters)
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"

# Firebase Credentials (JSON format - single line)
FIREBASE_CREDENTIALS={"type":"service_account","project_id":"your-project-id","private_key":"your-private-key","client_email":"your-client-email"...}

# ==================================
# ePayco Payment Gateway - PRODUCTION
# ==================================
EPAYCO_PUBLIC_KEY=your_epayco_public_key
EPAYCO_PRIVATE_KEY=your_epayco_private_key
EPAYCO_CUSTOMER_ID=your_customer_id
EPAYCO_P_CUST_ID=your_customer_id
EPAYCO_P_KEY=your_p_key

# IMPORTANT: Set to false for production
EPAYCO_TEST=false
EPAYCO_TEST_MODE=false

# SECURITY: Never allow unsigned webhooks in production
EPAYCO_ALLOW_UNSIGNED_WEBHOOKS=false

# Webhook URLs - PRODUCTION
EPAYCO_RESPONSE_URL=https://pnptv.app/epayco/response
EPAYCO_CONFIRMATION_URL=https://pnptv.app/epayco/confirmation

# ==================================
# URLs Configuration - PRODUCTION
# ==================================
BOT_URL=https://pnptv.app
PAYMENT_PAGE_URL=https://pnptv.app/pay
WEBAPP_URL=https://pnptv.app
WEB_APP_URL=https://pnptv.app
RESPONSE_URL=https://pnptv.app/epayco/response
CONFIRMATION_URL=https://pnptv.app/epayco/confirmation
WEBHOOK_URL=https://pnptv.app

# ==================================
# Server Configuration
# ==================================
PORT=3000
WEB_PORT=3000

# ==================================
# Error Tracking & Monitoring
# ==================================
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENABLE_IN_DEV=false

# ==================================
# Daimo Pay (Stablecoin Payments)
# ==================================
DAIMO_API_KEY=your_daimo_api_key
DAIMO_APP_ID=pay-televisionlatina

# Frontend configuration
NEXT_PUBLIC_DAIMO_APP_ID=pay-televisionlatina

# Vite configuration
VITE_DAIMO_APP_ID=pay-televisionlatina
VITE_TREASURY_ADDRESS=your_treasury_wallet_address
VITE_REFUND_ADDRESS=your_refund_wallet_address

# Webhook URL - PRODUCTION
DAIMO_WEBHOOK_URL=https://pnptv.app/daimo/webhook
DAIMO_RETURN_URL=https://pnptv.app/payment/success
DAIMO_WEBHOOK_TOKEN=your_webhook_token

# ==================================
# Next.js Configuration
# ==================================
NEXT_PUBLIC_TREASURY_ADDRESS=your_treasury_wallet_address
NEXT_PUBLIC_REFUND_ADDRESS=your_refund_wallet_address
NEXT_PUBLIC_BOT_URL=https://pnptv.app

# ==================================
# WebApp Configuration
# ==================================
JWT_SECRET=your_jwt_secret_here_generate_with_openssl_rand_hex_64

# Telegram Bot Username (without @)
TELEGRAM_BOT_USERNAME=YourBotUsername
NEXT_PUBLIC_TELEGRAM_BOT_USERNAME=YourBotUsername

# WebApp URLs - PRODUCTION
NEXT_PUBLIC_WEBAPP_URL=https://pnptv.app
