# Daimo (sandbox default)
DAIMO_APP_ID=pay-demo
DAIMO_API_KEY=pay-demo

# Webhook token (Authorization: Basic <token>)
DAIMO_WEBHOOK_TOKEN=change-this-to-a-long-random-string

# Where funds are received / refunds sent (MUST be valid on supported networks)
DAIMO_TREASURY_ADDRESS=0xYourTreasuryAddress
DAIMO_REFUND_ADDRESS=0xYourRefundAddressAllNetworks

# Public URL of the web app (used in redirects)
WEB_APP_URL=https://pay.pnptv.app

# Firebase (fill with real values for prod)
FIREBASE_PROJECT_ID=pnp-project-id
FIREBASE_CLIENT_EMAIL=service-account@pnp-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Server port
PORT=8080
