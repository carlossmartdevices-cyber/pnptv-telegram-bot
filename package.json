{
  "name": "pnp_tv",
  "version": "2.0.0",
  "description": "PNPtv - Social platform Telegram bot with premium features",
  "main": "src/bot/index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node start-bot.js",
    "start:direct": "node src/bot/index.js",
    "dev": "nodemon start-bot.js",
    "dev:payment": "next dev src/payment-page -p 3001",
    "dev:webapp": "cd src/webapp && npm run dev",
    "build:payment": "next build src/payment-page",
    "build:webapp": "cd src/webapp && npm run build",
    "start:payment": "next start src/payment-page -p 3001",
    "start:webapp": "cd src/webapp && npm start",
    "test": "jest",
    "test:connection": "node test-connection.js",
    "cleanup:sessions": "node src/scripts/cleanup-sessions.js",
    "cleanup:sessions:dry-run": "node src/scripts/cleanup-sessions.js --dry-run",
    "cleanup:sessions:verbose": "node src/scripts/cleanup-sessions.js --verbose",
    "build": "npm run build:payment && npm run build:webapp",
    "railway:deploy": "railway up",
    "railway:logs": "railway logs",
    "railway:status": "railway status"
  },
  "dependencies": {
    "@daimo/pay": "^1.18.3",
    "@daimo/pay-common": "^1.18.3",
    "@sentry/node": "^10.20.0",
    "@sentry/react": "^10.20.0",
    "@tanstack/react-query": "^5.90.5",
    "axios": "^1.6.7",
    "dotenv": "^17.2.3",
    "epayco-sdk-node": "^1.4.4",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "firebase-admin": "^13.5.0",
    "lodash-id": "^0.14.1",
    "multer": "^1.4.5-lts.1",
    "next": "^15.5.6",
    "node-cron": "^4.2.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "telegraf": "^3.40.0",
    "telegraf-session-local": "^2.1.0",
    "viem": "^2.38.3",
    "wagmi": "^2.18.1",
    "winston": "^3.18.3",
    "zustand": "^4.5.0",
    "date-fns": "^3.0.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/node": "^24.8.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "autoprefixer": "^10.4.17",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "postcss": "^8.4.35",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.9.3"
  }
}
