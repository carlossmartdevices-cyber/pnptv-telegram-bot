{
  "name": "pnptv-bot",
  "description": "PNPtv - Social platform Telegram bot with premium features",
  "repository": "https://github.com/yourusername/pnptv-bot",
  "logo": "https://telegram.org/img/t_logo.png",
  "keywords": ["telegram", "bot", "social", "premium", "nodejs"],
  "stack": "heroku-22",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "TELEGRAM_BOT_TOKEN": {
      "description": "Your Telegram Bot Token from @BotFather",
      "required": true
    },
    "FIREBASE_PROJECT_ID": {
      "description": "Firebase Project ID",
      "required": true
    },
    "FIREBASE_PRIVATE_KEY": {
      "description": "Firebase Private Key (replace \\n with actual newlines)",
      "required": true
    },
    "FIREBASE_CLIENT_EMAIL": {
      "description": "Firebase Client Email",
      "required": true
    },
    "FIREBASE_STORAGE_BUCKET": {
      "description": "Firebase Storage Bucket URL",
      "required": true
    },
    "EPAYCO_PUBLIC_KEY": {
      "description": "ePayco Public Key",
      "required": true
    },
    "EPAYCO_PRIVATE_KEY": {
      "description": "ePayco Private Key",
      "required": true
    },
    "EPAYCO_CUSTOMER_ID": {
      "description": "ePayco Customer ID (P_CUST_ID)",
      "required": true
    },
    "EPAYCO_TEST": {
      "description": "ePayco test mode (true/false)",
      "value": "false",
      "required": false
    },
    "WEBAPP_URL": {
      "description": "Your Heroku app URL (https://yourapp.herokuapp.com)",
      "required": true
    },
    "RESPONSE_URL": {
      "description": "Payment response URL (same as WEBAPP_URL)",
      "required": true
    },
    "CONFIRMATION_URL": {
      "description": "Payment confirmation webhook URL",
      "required": true
    },
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production",
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": []
}
