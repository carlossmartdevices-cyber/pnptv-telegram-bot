FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_DATABASE_URL=https://your-firebase-project.firebaseio.com

# Daimo Pay
DAIMO_APP_ID=pay-xxxxxxxxxxxxxxxxxxxxxxxx
