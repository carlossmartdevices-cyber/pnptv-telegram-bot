# Bot Configuration
TELEGRAM_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
CHANNEL_ID=your_channel_id_here

# Admin Configuration
ADMIN_IDS=your_telegram_user_id_here

# Firebase Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CREDENTIALS={"type":"service_account","project_id":"your-project-id","private_key":"-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n","client_email":"your-service-account@your-project.iam.gserviceaccount.com"}

# ==================================
# ePayco Payment Gateway (Colombia)
# ==================================
# Get your credentials from: https://dashboard.epayco.co/ → Settings → API Keys
# IMPORTANT: Never commit real credentials to version control!

EPAYCO_PUBLIC_KEY=your_epayco_public_key_here
EPAYCO_PRIVATE_KEY=your_epayco_private_key_here
EPAYCO_P_CUST_ID=your_customer_id_here
EPAYCO_P_KEY=your_p_key_here

# Test mode (IMPORTANT: Set to 'true' for development/testing, 'false' for production)
EPAYCO_TEST_MODE=true

# Allow unsigned webhooks (ONLY for development - NEVER in production)
EPAYCO_ALLOW_UNSIGNED_WEBHOOKS=false

# Webhook URLs (will be auto-constructed from BOT_URL if not specified)
EPAYCO_RESPONSE_URL=https://your-app.herokuapp.com/epayco/response
EPAYCO_CONFIRMATION_URL=https://your-app.herokuapp.com/epayco/confirmation

# Optional: IP whitelist for webhooks (comma-separated)
# EPAYCO_WEBHOOK_IPS=

# Bot URL (for webhooks and mini app)
# IMPORTANT: Must be HTTPS for Telegram Mini Apps to work
BOT_URL=https://your-app.herokuapp.com
WEB_APP_URL=https://your-app.herokuapp.com
WEBAPP_URL=https://your-app.herokuapp.com

# Web Server
PORT=3000
WEB_PORT=3000

# Error Tracking & Monitoring
# Get your DSN from: https://sentry.io/ → Project Settings → Client Keys (DSN)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENABLE_IN_DEV=false  # Set to 'true' to enable Sentry in development
NODE_ENV=production  # production, development, staging

# ==================================
# Redis Cache Configuration
# ==================================
# Redis is used for caching subscription plans, locale data, and other frequently accessed data
# This significantly improves performance by reducing Firestore reads

# Enable/disable Redis caching
REDIS_ENABLED=true

# Redis connection (choose one method):
# Method 1: Full Redis URL (recommended for cloud services like Railway, Heroku, etc.)
REDIS_URL=redis://localhost:6379

# Method 2: Individual connection parameters (for custom setups)
# REDIS_HOST=127.0.0.1
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password_here  # Optional, leave blank for no auth
# REDIS_DB=0  # Database number (0-15)

# ==================================
# ==================================
# Daimo Pay (Stablecoin Payments)
# ==================================
# Official documentation: https://paydocs.daimo.com/
# Dashboard: https://pay.daimo.com/dashboard
# Daimo Pay enables fast USDC deposits from exchanges, wallets, and payment apps
# IMPORTANT: Never commit real credentials to version control!

# App ID from Daimo dashboard (use pay-demo for prototyping only)
DAIMO_APP_ID=pay-televisionlatina

# Webhook token from Daimo dashboard (used to verify webhook requests)
# Get this when you create a webhook at https://pay.daimo.com/dashboard
DAIMO_WEBHOOK_TOKEN=your_webhook_token_here

# Frontend configuration (for Vite React payment page)
# These are exposed to the browser, so use VITE_ prefix
VITE_DAIMO_APP_ID=pay-televisionlatina
VITE_TREASURY_ADDRESS=0xYourTreasuryWalletAddress  # Where you receive USDC
VITE_REFUND_ADDRESS=0xYourRefundWalletAddress  # REQUIRED: Must be valid on ALL supported networks (Base, Optimism, Arbitrum, Polygon, etc)

# Settlement configuration (where payments arrive)
# Recommended: Optimism (chain ID: 10) or Base (chain ID: 8453)
# Token: USDC address on that chain (or 0x0000000000000000000000000000000000000000 for native)
VITE_SETTLEMENT_CHAIN=10  # Optimism
VITE_SETTLEMENT_TOKEN=0x0b2C639c533813f4Aa9D7837CAf62653d097Ff85  # USDC on Optimism

# Payment page URL (where React app is hosted)
PAYMENT_PAGE_URL=https://your-app.herokuapp.com/pay

# ==================================
# AI Chat Integration (OpenAI GPT)
# ==================================
# Get your API key from: https://platform.openai.com/api-keys
# This enables the AI chat support feature in the help menu
# Leave blank to disable AI chat (feature will show as unavailable)

OPENAI_API_KEY=your_openai_api_key_here

# Optional: Other AI Services (for future integration)
# ANTHROPIC_API_KEY=your_anthropic_key_here
