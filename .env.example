# ========================================
# PNPtv Telegram Bot - Environment Variables
# ========================================

# ------------------------------------------
# Bot Mode Configuration
# ------------------------------------------
# NODE_ENV: development | production
# USE_WEBHOOK: true (production) | false (development/polling)
NODE_ENV=development
USE_WEBHOOK=false

# ------------------------------------------
# Webhook Configuration (Production Only)
# ------------------------------------------
# BOT_URL: Your public HTTPS URL (required for webhook mode)
# Example: https://yourdomain.com
BOT_URL=https://yourdomain.com

# Server port (default: 3000)
PORT=3000

# ------------------------------------------
# Telegram Bot
# ------------------------------------------
TELEGRAM_TOKEN=your_bot_token_here

# ------------------------------------------
# Firebase
# ------------------------------------------
FIREBASE_CREDENTIALS={"type":"service_account","project_id":"..."}
FIREBASE_PROJECT_ID=your_firebase_project_id

# ------------------------------------------
# Daimo Payment Integration
# ------------------------------------------
DAIMO_API_KEY=your_daimo_api_key
DAIMO_APP_ID=your_daimo_app_id
DAIMO_WEBHOOK_TOKEN=your_webhook_token
DAIMO_PAYMENT_APP_URL=https://your-payment-app.vercel.app
NEXT_PUBLIC_TREASURY_ADDRESS=0x_your_treasury_address
NEXT_PUBLIC_REFUND_ADDRESS=0x_your_refund_address

# Optional: Enable webhook signature validation
DAIMO_WEBHOOK_VALIDATION=false

# ------------------------------------------
# Mistral AI (Customer Support Bot)
# ------------------------------------------
MISTRAL_API_KEY=your_mistral_api_key
MISTRAL_AGENT_ID=your_agent_id

# ------------------------------------------
# Sentry (Error Tracking)
# ------------------------------------------
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project

# ------------------------------------------
# Admin Configuration
# ------------------------------------------
# Comma-separated list of admin user IDs
ADMIN_IDS=123456789,987654321

# ------------------------------------------
# Notes:
# ------------------------------------------
# 1. For production, set NODE_ENV=production and USE_WEBHOOK=true
# 2. BOT_URL must use HTTPS (Telegram requirement)
# 3. Never commit real credentials to the repository
# 4. Use environment variables in your hosting platform
# 5. See WEBHOOK_SETUP.md for detailed deployment instructions
